<?xml version="1.0" encoding="UTF-8"?>


<sumoshader name="contrast" blending="false">

<shader type="fragment" blending="false">

<uniform type="float" name="$brightness" />
<uniform type="float" name="$saturation" />
<uniform type="float" name="$contrast" />

<functions>
</functions>

<main>

	// Increase or decrease theese values to adjust r, g and b color channels seperately
	const float AvgLumR = 0.5;
	const float AvgLumG = 0.5;
	const float AvgLumB = 0.5;
	
	const vec3 LumCoeff = vec3(0.2125, 0.7154, 0.0721);
	
	vec3 AvgLumin = vec3(AvgLumR, AvgLumG, AvgLumB);
	vec3 brtColor = color.rgb * $brightness*2.0;
	vec3 intensity = vec3(dot(brtColor, LumCoeff));
	vec3 satColor = mix(intensity, brtColor, $saturation*2.0);
	color = vec4(mix(AvgLumin, satColor, $contrast*2.0),color.a);

</main>

</shader>

</sumoshader>