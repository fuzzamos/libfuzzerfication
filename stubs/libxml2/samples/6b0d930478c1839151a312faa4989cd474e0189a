<?xml version='1.0' standalone='yes'?>

<!DOCTYPE attributes [
    <!ELEMENT attributes EMPTY>

    <!ATTLIST attributes
	entities	ENTITIES	#REQUIRED
	>
    
    <!NOTATION garbage PUBLIC "abcdefg">

    <!ENTITY e1 SYSTEM "unused-1" NDATA garbage>
    <!ENTITY e2 SYSTEM "unused-2" NDATA garbage>
    <!ENTITY e3 SYSTEM "unused-3" NDATA garbage>
    <!ENTITY e4 SYSTEM "unused-4" NDATA garbage>
    
    <!--
	XML 2nd ed erratum E20 makes it illegal (for SGML history)
	to use character refs to non-whitespace chars to separate
	IDREFS/ENTITIES ("Names" production) or
	NMROKENS ("Nmtokens" production)

	... this checks for ENTITIES
    -->
]>

<attributes
    entities =	" e1&#x0d;&#x0a; e2	 e3&#x20; e4 "
    />

