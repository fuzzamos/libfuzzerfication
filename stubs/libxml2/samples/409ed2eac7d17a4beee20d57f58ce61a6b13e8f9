<effect name="RibbonArray">

	<value name="numRibbons"	type="int"		default="7"		/>
	<value name="ridge"			type="float"	default="0.2"	/>
	<value name="width"			type="float"	default="1"		/>
	<value name="thickness"		type="float"	default="0.125"	/>
	<value name="segLength"		type="float"	default="0.05"	/>
	
	<!-- the t value in the 3ds file that you want to start and end at -->
	<value name="t_3dsStart"	type="float"	default="0"		/>
	<value name="t_3dsEnd"		type="float"	default="10"	/>

	<!-- 3ds filename -->
	<value name="filename" type="string"/>
	<!-- camera name in the 3ds file from which a spline should be created -->
	<value name="pathname" type="string"/>

</effect>